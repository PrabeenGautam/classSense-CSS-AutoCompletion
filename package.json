{
  "name": "classsense",
  "displayName": "classSense",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "classSense.cache",
        "title": "Cache CSS files"
      }
    ],
    "configuration": {
      "title": "ClassSense: CSS Class Completion",
      "properties": {
        "classSense.excludeFolders": {
          "type": "array",
          "default": [
            "**/.git/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/.hg/**",
            "**/.svn/**"
          ],
          "items": {
            "type": "string"
          },
          "description": "Folders to exclude from CSS file search."
        },
        "classSense.filesToScan": {
          "type": "string",
          "default": "**/*.{html,jsx,tsx}",
          "description": "Pattern for file search (Glob pattern). Reload window after changing this setting. Defaults to **/*.{html,jsx,tsx}"
        },
        "classSense.classAttributes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "class",
            "className",
            "ngClass"
          ],
          "markdownDescription": "The attributes to provide class completions."
        },
        "classSense.showSuggestions": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable autocomplete suggestions.",
          "scope": "language-overridable",
          "order": 1
        },
        "classSense.enableEmmetSupport": {
          "type": "boolean",
          "default": false,
          "description": "Enables completion for Emmet abbreviations."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
